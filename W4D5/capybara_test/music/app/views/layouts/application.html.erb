<!DOCTYPE html>
<html>
  <head>
    <title>Music</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <h1 class="music-app">Music App!</h1>
      <%= button_to "Sign Up!", new_user_url, method: "get", class: "nav-btn"%>
      <%= button_to "Sign In!", new_session_url, method: "get", class: "nav-btn"%>
      <% if self.controller.logged_in? %>
      <%= button_to "Logout", session_url, method: "delete", class: 'nav-btn'%>
      <% end %>
    </nav>
    <br>
    <br>


    <%= yield %>
  </body>
</html>
